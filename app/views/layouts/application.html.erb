<!DOCTYPE html>
<html>
<head>
  <title>Poolbookie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to "Your bets", profile_path %>
  <%= link_to_if !current_user, "Sign in", new_user_session_path %>
  <%= link_to_if current_user, "Sign out", destroy_user_session_path, :method => :delete %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
